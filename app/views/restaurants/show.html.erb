<h1><%= @restaurant.name %></h1>

<h3><%= "Fancy some #{@restaurant.category}-style food, come on down to #{@restaurant.name}" %></h3>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>


<h3>Reviews</h3>
<% @reviews.each do |review| %>
  <%= review.content %> - <%= review.rating %>
  <br>
<% end %>

<br><br>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, label: false, placeholder: "Between 0 and 5" %>
  <%= f.input :content, label: false, placeholder: "What did you think?" %>
  <%= f.submit %>
<% end %>
<br>
<p><%= link_to "Back home", restaurants_path, class: "btn btn-primary" %></p>
